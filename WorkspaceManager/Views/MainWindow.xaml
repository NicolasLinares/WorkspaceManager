<Window x:Class="WorkspaceManagerTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:element="clr-namespace:WorkspaceManagerTool.Views"
        mc:Ignorable="d" ResizeMode="CanResize"
        Title="Workspace Manager Tool" Height="500" MinHeight="500" Width="500" MinWidth="450" >

    <Grid Background="{StaticResource Black}">
        <TabControl Background="{StaticResource Dark}" BorderThickness="0" >
            <TabItem Header="Accesos directos" Style="{StaticResource _TabItemStyle}" >
                <element:QuickAccess_Tab />
            </TabItem>
            <TabItem Header="Scripts" Style="{StaticResource _TabItemStyle}">
                <element:Scripts_Tab />
            </TabItem>
            <TabItem Header="Configuración" Style="{StaticResource _TabItemStyle}">
                <element:Config_Tab />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
